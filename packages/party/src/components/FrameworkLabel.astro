---
import FRAMEWORKS from '@/frameworks.mjs';

const { id, size = 20, subtitle = true } = Astro.props;

const framework = FRAMEWORKS.find((f) => f.id === id);

const baseURL = import.meta.env.MODE === 'development' ? '' : 'https://raw.githubusercontent.com/sveltosis/sveltosis/main/packages/party/public/';
---

<div class="flex items-center space-x-1">
	{framework?.img && <img src={baseURL + framework.img} alt={framework.id} width={size} height={size} class="inline mr-[5px] mb-0 mt-0" />}
	<span class="flex-shrink-0">{framework.title}</span>{
		subtitle && <small class="text-xs text-gray-400">&nbsp;&nbsp;&nbsp;{framework?.id !== 'svelte' ? 'generated by Sveltosis' : 'Sveltosis input'}</small>
	}
</div>
