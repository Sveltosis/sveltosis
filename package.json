{
  "name": "@sveltosis/repo",
  "private": true,
  "version": "0.0.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build:fiddle": "yarn workspace @sveltosis/fiddle run build",
    "build:parser": "yarn workspace @sveltosis/parser run build",
    "build:vite": "yarn workspace vite-plugin-sveltosis run build",
    "dev": "run-p -c dev:*",
    "dev:fiddle": "yarn workspace @sveltosis/fiddle run dev",
    "dev:parser": "yarn workspace @sveltosis/parser run dev",
    "dev:vite": "yarn workspace vite-plugin-sveltosis run dev"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
